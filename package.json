{
  "name": "ginko-dca-bot",
  "version": "0.1.0",
  "description": "Dollar-Cost Averaging (DCA) bot for Ginko Protocol",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target node",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@ginko/sdk": "file:./sdk",
    "@solana/web3.js": "^1.95.8",
    "@solana/spl-token": "^0.4.9",
    "bignumber.js": "^9.0.2",
    "bs58": "^5.0.0",
    "bun-types": "latest",
    "cron": "^3.1.6",
    "dotenv": "^16.4.5",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "22.10.6",
    "@types/bs58": "^4.0.4",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "5.3.3"
  }
} 